{
  "version": "3.1",
  "services": {
    "gateway": {
      "build": "./apiGateway",
      "networks": {
        "bigGamerNetwork": {}
      }
    },
    "wallet": {
      "build": "./backend/wallet",
      "tty": true,
      "networks": {
        "bigGamerNetwork": {}
      },
      "volumes": ["./backend/wallet:/app/wallet"]
    },
    "service2": {
      "build": "./backend/service2",
      "networks": {
        "bigGamerNetwork": {}
      }
    },
    "tetris": {
      "build": "./frontend/games/tetris",
      "tty": true,
      "networks": {
        "bigGamerNetwork": {}
      },
      "volumes": ["./frontend/games/tetris:/app/frontend/games/tetris"]
    },
    "nginx": {
      "image": "nginx",
      "ports": ["8083:80"],
      "volumes": ["./nginx.conf:/etc/nginx/nginx.conf"],
      "networks": {
        "bigGamerNetwork": {}
      }
    }
  },
  "networks": {
    "bigGamerNetwork": {
      "driver": "bridge"
    }
  }
}
