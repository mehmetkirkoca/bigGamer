{
  "version": "3.1",
  "services": {
    "gateway": {
      "build": "./apiGateway",
      "ports": [
        "8083:8083"
      ],
      "networks": {
        "bigGamerNetwork": {}
      }
    },
    "wallet": {
      "build": "./backend/wallet",
      "tty": true,
      "networks": {
        "bigGamerNetwork": {}
      },
      "volumes": ["./backend/wallet:/app/wallet"]
    },
    "service2": {
      "build": "./backend/service2",
      "networks": {
        "bigGamerNetwork": {}
      }
    },
    "frontend_game_tetris": {
      "build": "./frontend/games/tetris",
      "tty": true,
      "ports": [
        "8084:3001"
      ],
      "networks": {
        "bigGamerNetwork": {}
      },
      "volumes": ["./frontend/games/tetris:/app/frontend/games/tetris"]
    }
  },
  "networks": {
    "bigGamerNetwork": {
      "driver": "bridge"
    }
  }
}
