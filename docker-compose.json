{
  "version": "3.1",
  "services": {
    "gateway": {
      "build": "./apiGateway",
      "ports": [
        "8083:8083"
      ],
      "networks": {
        "bigGamerNetwork": {}
      }
    },
    "wallet": {
      "build": "./backend/wallet",
      "tty": true,
      "networks": {
        "bigGamerNetwork": {}
      },
      "volumes": ["./backend/wallet:/app/wallet"]
    },
    "service2": {
      "build": "./backend/service2",
      "networks": {
        "bigGamerNetwork": {}
      }
    }
  },
  "networks": {
    "bigGamerNetwork": {
      "driver": "bridge"
    }
  }
}
